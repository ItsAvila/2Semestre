4) import java.util.Scanner;

public class Exercicio4{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
        
        double raio, area;
        System.out.println("Qual o valor do raio:");
        raio = in.nextDouble();
        
        area = (4 * 3.14 * (raio * raio));
        System.out.println("A sua area é de: " + area);
    }
}

5)import java.util.Scanner;

public class Exercicio5{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
         
         
         double valor, n2, n3, n4;
         System.out.println("Qual o valor de N ?");
         valor = in.nextDouble();
         
         n2 = (valor * valor);
         n3 = (n2 * valor);
         n4 = (n3 * valor);
         
         System.out.println("O valor de n2 é: " + n2);
         System.out.println("O valor de n3 é: " + n3);
         System.out.println("O valor de n4 é: " + n4);
    }
}

6) import java.util.Scanner;

public class Exercicio6{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
         
         double fahr, celsius;
         System.out.println("Qual a temperatura em Fahrenheit ? ");
         fahr = in.nextDouble();
         
         celsius = (fahr - 32) * 5 / 9;
         System.out.println("A sua temperatura em Celsius é : " + celsius);
    }
}

7)import java.util.Scanner;

public class Exercicio7{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
         
         int a, b, soma, diferenca;
         double media, maior, menor;
         
         System.out.println("Qual o valor de a? ");
         a = in.nextInt();
         System.out.println("Qual o valor de b? ");
         b = in.nextInt();
         
         soma = a + b;
         diferenca = a - b;
         media = a / b;
         maior = (soma + diferenca) / 2;
         menor = (soma - (diferenca)) / 2;
         
         System.out.println("A soma é: " + soma);
         System.out.println("A diferença é: " + diferenca);
         System.out.println("A media é: " + media);
         System.out.println("O maior é: " + maior);
         System.out.println("O menor é: " + menor);

    }
}

8) import java.util.Scanner;

public class Exercicio8{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
       
       double largura_terreno, comprimento_terreno, largura_casa, comprimento_casa;
       System.out.println("Qual a largura do terreno? ");
       largura_terreno = in.nextDouble();
       System.out.println("Qual o comprimento do terreno? ");
       comprimento_terreno = in.nextDouble();
       
       System.out.println("Qual a largura da casa? ");
       largura_casa = in.nextDouble();
       System.out.println("Qual o comprimento da casa? ");
       comprimento_casa = in.nextDouble();
       
       double largura_livre, comprimento_livre;
       largura_livre = (largura_terreno - largura_casa);
       comprimento_livre = (comprimento_terreno - comprimento_casa);
      
       System.out.println("O terreno possui " + largura_livre + "de terreno livre");
       System.out.println("O terreno possui " + comprimento_livre + " de comprimento livre");
    }
}

9) import java.util.Scanner;

public class Exercicio9{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
       
      double altura, m, c, mili;
      System.out.println("Qual a sua altura ? (Em M)");
      altura = in.nextDouble();
      
      c = altura * 100;
      mili = c * 10;
      System.out.println("A sua altura em centimentros é: " + c);
      System.out.println("A sua altura em milimetros é: " + mili);
    }
}

10)import java.util.Scanner;

public class Exercicio10{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
       
       double horas, minutos, segundos;
       
       System.out.println("Digite o tempo em segundos do seu evento: ");
       segundos = in.nextDouble();
       
       horas = segundos / 3600;
       minutos = segundos / 60;
       segundos = segundos;
       
       System.out.println("O evento em horas é: " + horas);
       System.out.println("O evento em minutos é: " + minutos);
       System.out.println("O evento em segundos é: " + segundos);
    }
}

12) import java.util.Scanner;

public class Exercicio12{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
        
        int valor, nota100, nota50, nota20, nota10, nota5, nota2, moeda1;
        
        System.out.println("Digite uma quantia inteira: ");
        valor = in.nextInt();
        
        nota100 = valor / 100;
        nota50 = valor % 100 / 50;
        nota20 = valor % 100 % 50 / 20;
        nota10 = valor % 100 % 50 % 20 / 10;
        nota5 = valor % 100 % 50 % 20 % 10 / 5;
        nota2 = valor % 100 % 50 % 20 % 10 % 5 / 2;
        moeda1 = valor % 100 % 50 % 20 % 10 % 5 % 2 / 1;
        
        System.out.println("Nota 100 : " + nota100);
        System.out.println("Nota 50 : " + nota50);
        System.out.println("Nota 20 : " + nota20);
        System.out.println("Nota 10 : " + nota10);
        System.out.println("Nota 5 : " + nota5);
        System.out.println("Nota 2 : " + nota2);
        System.out.println("Moeda 1 : " + moeda1);
    }
}

